{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "apps/api/src/*"
      ],
      "@batch/*": [
        "apps/batch/src/*"
      ],
      "@app/app-config": [
        "libs/app-config/src"
      ],
      "@app/app-config/*": [
        "libs/app-config/src/*"
      ],
      "@app/database": [
        "libs/database/src"
      ],
      "@app/database/*": [
        "libs/database/src/*"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/i18n": [
        "libs/i18n/src"
      ],
      "@app/i18n/*": [
        "libs/i18n/src/*"
      ],
      "@app/google": [
        "libs/google/src"
      ],
      "@app/google/*": [
        "libs/google/src/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "esModuleInterop": true
  }
}